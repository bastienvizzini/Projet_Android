<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center">

    <androidx.cardview.widget.CardView
        android:id="@+id/roomCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:layout_margin="8dp">

        <LinearLayout
            android:id="@+id/roomCardLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="8dp" >

            <LinearLayout
                android:id="@+id/roomUsersLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

            </LinearLayout>

            <TextView
                android:id="@+id/numberOfUsersTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                tools:text="X / X" />

            <LinearLayout
                android:id="@+id/numberOfUsersLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

            </LinearLayout>

            <TextView
                android:id="@+id/gameDurationTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                tools:text="gameDuration" />

            <TextView
                android:id="@+id/gameIntensityTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="gameIntensity" />

            <TextView
                android:id="@+id/roomLanguageTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="language" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:background="@drawable/item_background_rounded_corner_dark"
                android:textColor="@android:color/white"
                android:layout_marginTop="8dp"
                android:text="@string/join" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>