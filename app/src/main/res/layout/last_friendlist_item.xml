<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@drawable/last_item_background"
    android:padding="8dp"
    android:layout_marginBottom="8dp">

    <ImageView
        android:id="@+id/friend_picture_item"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@color/lightGray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/friend_username_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/friend_name"
        app:layout_constraintBottom_toTopOf="@id/friend_current_game_item"
        app:layout_constraintStart_toEndOf="@id/friend_picture_item"
        app:layout_constraintTop_toTopOf="@id/friend_picture_item" />

    <TextView
        android:id="@+id/friend_current_game_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/current_playing_game"
        app:layout_constraintBottom_toBottomOf="@id/friend_picture_item"
        app:layout_constraintStart_toEndOf="@id/friend_picture_item"
        app:layout_constraintTop_toBottomOf="@id/friend_username_item" />


</androidx.constraintlayout.widget.ConstraintLayout>