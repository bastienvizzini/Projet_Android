<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activityRoomMessages"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="2dp"
    android:orientation="horizontal">

    <!-- MESSAGE CONTAINER -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/activityRoomItemMessageContainer"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">

        <!-- IMAGE VIEW PROFILE -->
        <ImageView
            android:id="@+id/activityRoomItemProfileImageReceiverUser"
            android:layout_width="50dp"
            android:layout_height="50dp"
            tools:srcCompat="@drawable/default_profile_pic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="visible" />

        <!-- TEXT MESSAGE CONTAINER -->
        <LinearLayout
            android:id="@+id/activityRoomItemMessageContainerTextContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/activityRoomItemProfileImageReceiverUser"
            app:layout_constraintEnd_toStartOf="@id/activityRoomItemProfileImageCurrentUser"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="12dp"
            android:orientation="vertical"
            android:gravity="start">

                <!-- TEXT MESSAGE -->
                <TextView
                    android:id="@+id/activityRoomItemMessageTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textIsSelectable="true"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    tools:text="Text example"
                    android:padding="8dp"
                    tools:background="@drawable/item_background_rounded_corner_dark"/>

                <!-- DATE MESSAGE -->
                <TextView
                    android:id="@+id/activityRoomItemMessageTextViewDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="12:12"
                    android:textStyle="bold"
                    android:textSize="8sp" />



        </LinearLayout>

        <!-- IMAGE VIEW PROFILE -->
        <ImageView
            android:id="@+id/activityRoomItemProfileImageCurrentUser"
            android:layout_width="50dp"
            android:layout_height="50dp"
            tools:srcCompat="@drawable/default_profile_pic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="visible"/>

    </androidx.constraintlayout.widget.ConstraintLayout>



</LinearLayout>