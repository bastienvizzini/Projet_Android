<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activityRoomMessages"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp">

    <!-- PROFILE CONTAINER -->
    <LinearLayout
        android:id="@+id/activity_mentor_chat_item_profile_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/activity_mentor_chat_item_message_container"
        app:layout_constraintBottom_toBottomOf="@+id/activity_mentor_chat_item_message_container"
        android:layout_margin="8dp">

        <!-- IMAGE VIEW PROFILE -->
        <ImageView
            android:id="@+id/activity_mentor_chat_item_profile_container_profile_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/default_profile_pic"/>

        <!-- IMAGE IS MENTOR -->
        <ImageView
            android:id="@+id/activity_mentor_chat_item_profile_container_is_mentor_image"
            android:layout_width="15dp"
            android:layout_height="15dp"
            app:srcCompat="@drawable/default_profile_pic"/>

    </LinearLayout>

    <!-- MESSAGE CONTAINER -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/activity_mentor_chat_item_message_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/activity_mentor_chat_item_profile_container">

        <!-- IMAGE SENT CONTAINER -->
        <androidx.cardview.widget.CardView
            android:id="@+id/activity_mentor_chat_item_message_container_image_sent_cardview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="gone">

            <!-- IMAGE SENT -->
            <ImageView
                android:id="@+id/activity_mentor_chat_item_message_container_image_sent_cardview_image"
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:scaleType="centerCrop"/>

        </androidx.cardview.widget.CardView>

        <!-- TEXT MESSAGE CONTAINER -->
        <LinearLayout
            android:id="@+id/activity_mentor_chat_item_message_container_text_message_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/item_background_rounded_corner_dark"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <!-- TEXT MESSAGE -->
                <TextView
                    android:id="@+id/activity_mentor_chat_item_message_container_text_message_container_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textIsSelectable="true"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    tools:text="Text example" />

            </LinearLayout>

        </LinearLayout>

        <!-- DATE MESSAGE -->
        <TextView
            android:id="@+id/activity_mentor_chat_item_message_container_text_view_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/activity_mentor_chat_item_message_container_text_message_container"
            app:layout_constraintEnd_toEndOf="@+id/activity_mentor_chat_item_message_container_text_message_container"
            tools:text="12:12"
            android:textStyle="bold"
            android:textSize="8sp" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>